<datasource-config>
	<connection-info>
		<!-- connection-type:Please use "dbcp" or "jdbc" default:"jdbc" -->
		<connection-type>dbcp</connection-type>
		<driver-class>com.mysql.jdbc.Driver</driver-class>
		<db-url>jdbc:mysql://localhost:3306/jee?characterEncoding=utf-8</db-url>
		<user-name>root</user-name>
		<pass-word>caojian</pass-word>
